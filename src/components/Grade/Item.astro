---
const {icon, class: className, classIconName, ...rest} = Astro.props;

import { Icon } from 'astro-icon';
---
<div class={`flex items-center justify-center w-10 min-[400px]:w-[50px] h-10 min-[400px]:h-[50px] flex-shrink-0 rounded-full border-[2px] bg-transparent transition-colors duration-300 ease-in-out cursor-pointer group ${className}`} {...rest}>
    <Icon name={icon} class={`w-5 min-[400px]:w-7 ${classIconName} group-hover:fill-white`} />
</div>