---
interface Props {
	url?: string;
	title?: string;
	descr?: string;
	logo?: string;
	divide?: boolean;
	version?: number;
}
const {
	url = '#!',
	title,
	descr,
	logo,
	divide = true,
	version = 1,
} = Astro.props;
const defaultClasses = [
	'xs:text-lg',
	'flex',
	'items-center',
	'text-left',
	'text-xs',
	'font-light',
	'sm:text-2xl',
];
const classes = divide
	? ['gap-2', 'xs:gap-4', 'divide-x-2', 'divide-midnight', ...defaultClasses]
	: ['gap-4', 'xs:gap-8', ...defaultClasses];
const defaultSpanClasses = [
	'flex',
	'flex-col',
	'justify-between',
	'gap-2',
	'sm:gap-4',
];
const spanClasses = divide
	? ['pl-2', 'xs:pl-4', ...defaultSpanClasses]
	: defaultSpanClasses;
---

{
	version === 1 ? (
		<header class="py-8 sm:pb-14 sm:pt-12">
			<a href={url} class:list={classes}>
				{logo && (
					<img src={logo} class="w-[35%] sm:w-[200px]" alt={title ? title : 'ALT'} />
				)}
				<span class:list={spanClasses}>
					{title && (
						<span class="font-medium transition-colors duration-500 hover:text-yellow">
							{title}
						</span>
					)}
					{descr && <span>{descr}</span>}
				</span>
			</a>
		</header>
	) : (
		<header class="py-8 pb-14 sm:pt-12">
			<a
				href={url}
				class="xs:text-lg flex flex-col items-center gap-4 text-xs font-light sm:text-xl">
				<img src={logo} class="w-full" alt={title ? title : 'ALT'} />
				<span>{title}</span>
			</a>
		</header>
	)
}
